<body>
    <div class="container justify-content-center">
        <div class="title-container">
            <h1 class="titleHeader">Yum! Burgers!</h2>
        </div>
        <div class="burger-container">
            <img src="/assets/IMG/borger.png" alt="This is an image of a burger" class="burgerIMG">
        </div>
    </div>
    <div class="burgerAdder">
        <h2>Make a Burger Here:</h2>
        <form id="create-form">
            <div class="input-group">
                <input type="text" id="newBurger" class="form-control" name="burger_name">
                <button class="btn burgerAdd" type="submit">Add a burger</button>
            </div>
        </form>
    </div>
    <div class="container">
        <h2>Free Uneaten Burgers Here:</h2>
        <ul class="list-group burger-list">
            {{#each burgers}}
            {{#unless devoured}}
            <li class="list-group-item">
                {{burger_name}}
                <button data-id="{{id}}" class="devour">Eat Borger</button>
            </li>
            {{/unless}}
            {{/each}}
        </ul>
    </div>
    <div class="container">
        <h2>Eaten Burgers Here:</h2>
        <ul class="list-group burger-list">
            {{#each burgers}}
            {{#if devoured}}
            <li class="list-group-item">
                {{burger_name}}
            </li>
            {{/if}}
            {{/each}}
        </ul>
    </div>
    <script src="/assets/JS/index.js"></script>
</body>